
@{
    ViewData["Title"] = "Login";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}


<style>
    .mandatory {
        color: red;
    }

    body {
        margin: 0;
        padding: 0;
        background-color: #17a2b8;
        height: 100vh;
    }

    #login .container #login-row #login-column #login-box {
        margin-top: 120px;
        max-width: 600px;
        height: 320px;
        border: 1px solid #9C9C9C;
        background-color: #EAEAEA;
    }

        #login .container #login-row #login-column #login-box #login-form {
            padding: 20px;
        }

            #login .container #login-row #login-column #login-box #login-form #register-link {
                margin-top: -85px;
            }
</style>


<div id="login">
    <div class="container">
        <div id="login-row" class="row justify-content-center align-items-center">
            <div id="login-column" class="col-md-6">
                <div id="login-box" class="col-md-12">
                    <form id="login-form" class="form" action="/Login/Index" method="post">
                        <h3 class="text-center text-info">Login</h3>
                        <div class="form-group">
                            <label for="username" class="text-info">UserName <span class="mandatory">*</span></label><br>
                            <input type="text" name="username" id="loginUsername" class="form-control">
                        </div>
                        <div class="form-group">
                            <label for="password" class="text-info">Password <span class="mandatory">*</span></label><br>
                            <input type="password" name="password" id="loginPassword" class="form-control">
                        </div>
                        <div class="form-group">
                            <input type="submit" name="submit" class="btn btn-info btn-md" value="Login" onclick="return validate()">
                            <a href="/User" class="text-info text-right" style="margin-left:300px">Register </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


<script src="~/lib/jquery/dist/jquery.js"></script>
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<link href="~/lib/toastr/toastr.css" rel="stylesheet" />
<script src="~/lib/toastr/toastr.min.js" type="text/javascript"></script>


@if (ViewBag.Message == "Failed")
{
    <script type="text/javascript">toastr["error"]("Login Failed. Please Try Again")</script>
}





